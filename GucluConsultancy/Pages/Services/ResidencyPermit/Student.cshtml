@page "/ikamet-izni/ogrenci"
@model GucluConsultancy.Pages.Services.ResidencyPermit.StudentModel

@{
  ViewData["Title"] = "Öğrenci İkamet İzni";
}

<section class="page-header">
  <div class="container">
    <h1>Öğrenci İkamet İzni</h1>
  </div>
</section>

<section class="page-content form-page">
  <div class="container">

    <p class="mandotary-field-warning">Zorunlu alanlar <span class="text-danger">*</span> karakteri ile işaretlenmiştir.</p>

    <form class="information-form" method="post" enctype="multipart/form-data">
      <div asp-validation-summary="ModelOnly"></div>

      <section class="form-group">
        <h2>Kişisel Bilgiler</h2>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.ForeignersId"></label>
              <br />
              <span class="label-detail">daha önce ikamet izni varsa</span>
            </div>
            <input asp-for="StudentVM.ForeignersId" />
          </div>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.FatherName"></label> <span class="text-danger">*</span>
            </div>
            <input asp-for="StudentVM.FatherName" />
          </div>
          <span asp-validation-for="StudentVM.FatherName" class="text-danger"></span>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.MotherName"></label> <span class="text-danger">*</span>
            </div>
            <input asp-for="StudentVM.MotherName" />
          </div>
          <span asp-validation-for="StudentVM.MotherName" class="text-danger"></span>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.MaritalStatus"></label> <span class="text-danger">*</span>
            </div>
            <select asp-for="StudentVM.MaritalStatus">
              <option value="" selected disabled>-- Seçiniz --</option>
              <option value="Evli">Evli</option>
              <option value="Bekar">Bekar</option>
              <option value="Boşanmış">Boşanmış</option>
              <option value="Dul">Dul</option>
            </select>
          </div>
          <span asp-validation-for="StudentVM.MaritalStatus" class="text-danger"></span>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.BirthCountry"></label> <span class="text-danger">*</span>
            </div>
            <input asp-for="StudentVM.BirthCountry" />
          </div>
          <span asp-validation-for="StudentVM.BirthCountry" class="text-danger"></span>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.BirthNationality"></label> <span class="text-danger">*</span>
            </div>
            <input asp-for="StudentVM.BirthNationality" />
          </div>
          <span asp-validation-for="StudentVM.BirthNationality" class="text-danger"></span>
        </div>
      </section>

      <section class="form-group">
        <h2>İletişim Bilgileri</h2>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.PhoneNumber"></label> <span class="text-danger">*</span>
            </div>
            <input asp-for="StudentVM.PhoneNumber" />
          </div>
          <span asp-validation-for="StudentVM.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.EmailAddress"></label>
            </div>
            <input asp-for="StudentVM.EmailAddress" />
          </div>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.AddressAbroad"></label> <span class="text-danger">*</span>
            </div>
            <input asp-for="StudentVM.AddressAbroad" />
          </div>
          <span asp-validation-for="StudentVM.AddressAbroad" class="text-danger"></span>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.AddressTurkey"></label> <span class="text-danger">*</span>
            </div>
            <input asp-for="StudentVM.AddressTurkey" />
          </div>
          <span asp-validation-for="StudentVM.AddressTurkey" class="text-danger"></span>
        </div>
      </section>

      <section class="form-group">
        <h2>Diğer Bilgiler</h2>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.MonthlyIncome"></label> <span class="text-danger">*</span>
            </div>
            <input asp-for="StudentVM.MonthlyIncome" value="" />
          </div>
          <span asp-validation-for="StudentVM.MonthlyIncome" class="text-danger"></span>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.DesiredResidencyDuration"></label> <span class="text-danger">*</span>
            </div>
            <input asp-for="StudentVM.DesiredResidencyDuration" value="" />
          </div>
          <span asp-validation-for="StudentVM.DesiredResidencyDuration" class="text-danger"></span>
        </div>
      </section>

      <section class="form-group">
        <h2>Öğrenci Bilgileri</h2>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.EducationBeginDate"></label> <span class="text-danger">*</span>
            </div>
            <input asp-for="StudentVM.EducationBeginDate" type="date" value="@DateTime.Now" />
          </div>
          <span asp-validation-for="StudentVM.EducationBeginDate" class="text-danger"></span>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.EducationEndDate"></label> <span class="text-danger">*</span>
            </div>
            <input asp-for="StudentVM.EducationEndDate" type="date" value="@DateTime.Now" />
          </div>
          <span asp-validation-for="StudentVM.EducationEndDate" class="text-danger"></span>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.GradeLevel"></label> <span class="text-danger">*</span>
            </div>
            <input asp-for="StudentVM.GradeLevel" value="" />
          </div>
          <span asp-validation-for="StudentVM.GradeLevel" class="text-danger"></span>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label asp-for="StudentVM.SchoolAddress"></label> <span class="text-danger">*</span>
            </div>
            <input asp-for="StudentVM.SchoolAddress" />
          </div>
          <span asp-validation-for="StudentVM.SchoolAddress" class="text-danger"></span>
        </div>
      </section>

      <section class="form-group">
        <h2>Dosyalar</h2>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label for="BiometricPhoto">Biyometrik fotoğraf</label> <span class="text-danger">*</span>
            </div>
            <input type="file" name="BiometricPhoto" id="BiometricPhoto" />
          </div>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label for="PassportImage">Pasaport önyüz</label> <span class="text-danger">*</span>
            </div>
            <input type="file" name="PassportImage" id="PassportImage" />
          </div>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label for="StudentDocument">Öğrenci belgesi</label> <span class="text-danger">*</span>
            </div>
            <input type="file" name="StudentDocument" id="StudentDocument" />
          </div>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label for="PreviousResidencyCard">İkamet izin belgesi</label>
              <br />
              <span class="label-detail">daha önce ikamet izni varsa</span>
            </div>
            <input type="file" name="PreviousResidencyCard" id="PreviousResidencyCard" />
          </div>
        </div>
        <div class="form-line">
          <div class="label-input">
            <div class="label">
              <label>Sağlık sigortanız var mı?</label>
            </div>
            <div class="insurance-options">
              <div>
                <label for="yes-insurance">Evet</label>
                <input type="radio" name="have-insurance" id="yes-insurance" value="yes" />
              </div>
              <div>
                <label for="no-insurance">Hayır</label>
                <input type="radio" name="have-insurance" id="no-insurance" value="no" checked />
              </div>
            </div>
          </div>
        </div>
        <div class="form-line insurance-input">
          <div class="label-input">
            <div class="label">
              <label for="InsuranceImagePath">Sağlık sigortası</label> <span class="text-danger">*</span>
            </div>
            <input type="file" name="Insurance" id="Insurance" />
          </div>
        </div>

      </section>

      <div class="form-line">
        <div class="user-agreement-input">
          <input type="checkbox" id="user-agreement-check" name="user-agreement-check" required />
          <label for="user-agreement-check">
            <a asp-page="/UserAgreement" target="_blank">Kullanıcı sözleşmesini</a> okuduğumu ve kabul ettiğimi onaylıyorum.
          </label>
        </div>
        <button type="submit" class="button button-action" onclick="return validateInput()">Gönder</button>
      </div>
    </form>

  </div>
</section>

@section Scripts {

  <partial name="_ValidationScriptsPartial" />

  <environment include="Development">
    <script src="~/js/insurance-checker.js"></script>
  </environment>
  <environment exclude="Development">
    <script src="~/js/insurance-checker.min.js"></script>
  </environment>

  <script>
    function validateInput()
    {
      if (document.getElementById("BiometricPhoto").value === "")
      {
        swal("Lütfen biyometrik fotoğraf yükleyiniz.", "error");
        return false;
      }
      else if (document.getElementById("PassportImage").value === "")
      {
        swal("Lütfen pasaport önyüz yükleyiniz.", "error");
        return false;
      }
      else if (document.getElementById("StudentDocument").value === "")
      {
        swal("Lütfen öğrenci belgesi yükleyiniz.", "error");
        return false;
      }
      else if (document.querySelector("#yes-insurance").checked && document.querySelector("#Insurance").value === "")
      {
        swal("Lütfen sağlık sigortası yükleyiniz.", "error");
        return false;
      }
      else if (!document.querySelector("#user-agreement-check").checked)
      {
        swal("Lütfen kullanıcı sözleşmesini onaylayınız.", "error");
        return false;
      }

      return true;
    }
  </script>

}